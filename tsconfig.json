{
    "compilerOptions": {
        "target": "es2015",
        "jsx": "react",
        "noEmit": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "baseUrl": ".",
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    },
    "include": [
        "src",
        "storybook"
    ],
    "exclude": [
        "node_modules"
    ]
}